{
  "name": "blog-v2-web",
  "version": "1.0.0",
  "description": "Personal blog built with Next.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"velite --watch\" \"next dev\"",
    "build": "velite && next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.30.1",
  "dependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "geist": "^1.7.0",
    "next": "^16.1.6",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "tailwindcss": "^4.2.0",
    "velite": "^0.3.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.0",
    "eslint-config-next": "^16.1.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  },
  "imports": {
    "#site/content": {
      "types": "./.velite/index.d.ts",
      "import": "./.velite/index.js",
      "default": "./.velite/index.js"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
